<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/pr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F123D"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/pr_imageView3"
            android:layout_width="245dp"
            android:layout_height="156dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/pr_editprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:lineSpacingExtra="14sp"
            android:text="Mi perfil"
            android:textAlignment="center"
            android:textColor="#E2C792"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pr_blank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:lineSpacingExtra="14sp"
            android:text="Actualización de datos"
            android:textAlignment="center"
            android:textColor="#0F123D"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pr_user_name"
            android:layout_width="362dp"
            android:layout_height="21dp"
            android:fontFamily="@font/lato"
            android:hint="USUARIO"

            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E2C792"
            android:textColorHint="#E2C792"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pr_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:hint="CONTRASEÑA"
            android:inputType="text|textPassword"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#E2C792"
            android:textColorHint="#E2C792" />

        <EditText
            android:id="@+id/pr_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:hint="NOMBRE"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#E2C792"
            android:textColorHint="#E2C792" />


        <EditText
            android:id="@+id/pr_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:hint="APELLIDOS"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#E2C792"
            android:textColorHint="#E2C792" />

        <EditText
            android:id="@+id/pr_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:hint="CORREO ELECTRÓNICO"
            android:inputType="textWebEmailAddress|text"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#E2C792"
            android:textColorHint="#E2C792" />

        <EditText
            android:id="@+id/pr_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:hint="DIRECCIÓN"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#E2C792"
            android:textColorHint="#E2C792" />

        <EditText
            android:id="@+id/pr_cellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:hint="TÉLEFONO CELULAR"
            android:inputType="text|phone"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#E2C792"
            android:textColorHint="#E2C792" />

        <EditText
            android:id="@+id/pr_workphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:hint="TÉLEFONO DE TRABAJO"
            android:inputType="text|phone"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#E2C792"
            android:textColorHint="#E2C792" />

        <TextView
            android:id="@+id/pr_blank2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:lineSpacingExtra="14sp"
            android:text="Actualización de datos"
            android:textAlignment="center"
            android:textColor="#0F123D"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pr_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/actualizar"
            android:textAllCaps="false"
            android:textColor="#0F123D"
            app:backgroundTint="#E2C792" />


    </LinearLayout>


</ScrollView>